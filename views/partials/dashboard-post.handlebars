<div class="post">
    <h3>{{title}}</h3> <!-- Display the post title -->
    <p>{{format_date createdAt}}</p> <!-- Display the post's creation date -->
    <button class="edit-post-btn" data-id="{{id}}">Edit</button> <!-- Button to edit the post -->
    <button class="delete-post-btn" data-id="{{id}}">Delete</button> <!-- Button to delete the post -->
</div>
