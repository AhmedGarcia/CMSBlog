<h2>{{title}}</h2>
<p>{{content}}</p>

<h3>Comments</h3>
{{#if comments.length}}
    {{#each comments}}
        <div class="comment">
            <p>{{this.content}}</p>
            <p>By: {{this.user.username}} on {{format_date this.createdAt}}</p>
        </div>
    {{/each}}
{{else}}
    <p>No comments yet. Be the first to comment!</p>
{{/if}}

{{#if logged_in}}
<form id="new-comment-form" action="/api/comments" method="POST">
    <textarea name="content" id="comment-content" required></textarea>
    <input type="hidden" name="post_id" value="{{id}}" id="post-id">
    <button type="submit">Submit</button>
</form>
{{/if}}

