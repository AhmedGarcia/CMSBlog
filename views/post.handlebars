<!-- views/post.handlebars -->
<h2>{{title}}</h2>
<p>{{content}}</p>

<h3>Comments</h3>
{{#each comments}}
  <p>{{this.content}} - by {{this.user.username}} on {{this.createdAt}}</p>
{{/each}}

{{#if logged_in}}
<form class="comment-form">
  <textarea id="comment-content" rows="3" placeholder="Add a comment..."></textarea>
  <input type="hidden" id="post-id" value="{{id}}">
  <button type="submit">Submit Comment</button>
</form>
{{/if}}
